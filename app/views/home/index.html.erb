<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Usu치rios cadastrados</h3>
                  </div>
                  <div class="col col-xs-6 text-right">
                    <% if policy(User).new? %>
                      <%= link_to 'Novo Usu치rio' , new_user_path , class: "btn btn-sm btn-primary btn-create" %>
                    <% elsif user_signed_in? %>
                      <%= link_to 'Novo Usu치rio' , '#' , class: "btn btn-sm btn-primary btn-create" , disabled: "disabled" %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">

                  <thead>
                    <tr>
                        <th></th>
                        <th class="hidden-xs">Matricula</th>
                        <th>Nome</th>
                        <th>Cargo</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                          <tr>
                            <td align="center">
                                <%= link_to edit_user_path(user) , class: "btn btn-default" do %>
                                  <i class="fa fa-pencil"></i>
                                <% end -%>
                                 <% if (current_user.id != user.id ) && policy(@users).destroy?%>
                                  <%= link_to user_path(user), method: :delete,   class: "btn btn-danger", data: { confirm: "Deseja excluir o usu치rio  ?"}  do %>
                                    <i class="fa fa-trash"></i>
                                  <% end -%>
                                 <% else %>
                                    <%= link_to '#',   class: "btn btn-danger", disabled: "disabled"  do %>
                                    <i class="fa fa-trash"></i>
                                  <% end -%>
                                <% end -%>
                            </td>
                            <td class="hidden-xs"><%= user.mat %></td>
                            <td><%= user.name %></td>
                            <td><%= user.role %></td>
                          </tr>
                    <% end %>
                  </tbody>

                </table>

              </div>
              <div class="panel-footer">
                <div class="row">
                  <div class="col col-xs-4">Page 1 of 5
                  </div>

                </div>
              </div>
            </div>

</div></div></div>
